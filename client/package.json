{
  "name": "@actions-term-on-fail/client",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts src/main.ts src/post.ts --bundle --platform=node --target=node20 --format=cjs --outdir=dist --external:node-pty --external:node-datachannel",
    "start": "node dist/index.js",
    "lint": "eslint src/ && npm run check-dist",
    "check-dist": "npm run build && git diff --exit-code dist/ || (echo 'Error: dist/ folder is out of date. Run npm run build and commit the changes.' && exit 7)"
  },
  "dependencies": {
    "@actions/core": "^2.0.2",
    "node-datachannel": "^0.31.0",
    "node-pty": "^1.0.0",
    "otpauth": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.0.6",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  }
}
